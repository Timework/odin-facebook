<%= form_for [ @user, @profile] do |f| %>

<ul>
  <% @profile.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>
<% if @profile.image.attached? %>
<%= image_tag(@profile.image)%>
<% end %>
<p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
</p>

<p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

<p>
    <%= f.label :about %><br />
    <%= f.text_area :about %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>